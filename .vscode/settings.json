{
  // Rust Language Server Configuration
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.check.allTargets": true,
  "rust-analyzer.check.allFeatures": true,
  "rust-analyzer.check.extraArgs": ["--", "-D", "warnings"],
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.hover.actions.implementations": true,
  "rust-analyzer.hover.actions.references": true,
  "rust-analyzer.completion.autoself.enable": true,
  "rust-analyzer.completion.autoImport.enable": true,
  "rust-analyzer.imports.granularity.group": "module",
  "rust-analyzer.imports.prefix": "crate",
  
  // Rust Formatting
  "rust-analyzer.rustfmt.extraArgs": ["+nightly"],
  "rust-analyzer.rustfmt.enable": true,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  
  // Taskfile Integration
  "task.autoDetect": "on",
  "task.allowAutomaticTasks": "on",
  
  // File Associations
  "files.associations": {
    "Taskfile.yml": "yaml",
    "*.toml": "toml",
    "Cargo.lock": "toml"
  },
  
  // Editor Configuration
  "editor.rulers": [80, 100],
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  
  // Search Configuration
  "search.exclude": {
    "**/target": true,
    "**/Cargo.lock": true,
    "**/.raftlog": true,
    "**/logs": true,
    "**/benchmarks": true,
    "**/test-results": true,
    "**/baseline_results": true,
    "**/.playwright-mcp": true,
    "**/playwright_env": true
  },
  
  // File Watcher
  "files.watcherExclude": {
    "**/target/**": true,
    "**/.raftlog/**": true,
    "**/logs/**": true,
    "**/benchmarks/**": true,
    "**/test-results/**": true,
    "**/baseline_results/**": true,
    "**/.playwright-mcp/**": true,
    "**/playwright_env/**": true
  },
  
  // Terminal Configuration
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {
    "RUST_LOG": "info",
    "RUST_BACKTRACE": "1"
  },
  
  // Git Configuration
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  
  // Language Specific Settings
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.tabSize": 2
  },
  
  // Test Configuration
  "rust-analyzer.runnables.command": "cargo",
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.run": true,
  "rust-analyzer.lens.debug": true,
  
  // Performance
  "rust-analyzer.cargo.sysroot": null,
  "rust-analyzer.diagnostics.enableExperimental": false,
  "rust-analyzer.completion.limit": 25,
  
  // Lithair Specific
  "rust-analyzer.linkedProjects": ["./Cargo.toml"],
  "rust-analyzer.cargo.features": "all"
}